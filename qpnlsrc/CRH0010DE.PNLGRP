:LI.EDIT                  [–EDIT€]
:LI.FIND <suchfolge>      [–F€|–FIND€]
:LI.EXPR <suchfolge>      [–X€|–EXPR€|–REGEX€]
:LI.GO <zeilennummer|tag> [–G€|–GO€]
:LI.GOHIST                [–GOHIST€]
:LI.NOTE <zeilennummer>   [–N€|–NOTE€]
:LI.NOTES                 [–NOTES€]
:LI.OPEN (Ansehen)        [–OPEN€]
:LI.OPENC (Editieren)     [–OPENC€]
:LI.PRINT                 [–PRINT€]
:LI.RELOAD                [–RELOAD€]
:LI.RESTORE               [–RESTORE€]
:LI.SAVE                  [–SAVE€]
:LI.SECTION oder FORMATE  [–SECTION€]
:LI.SETCR [ON|OFF]        [–SECTION€]
:LI.TAG bzw. HERMES       [–TAG€|–HERMES€]
:LI.TOP                   [–T€|–TOP€]
